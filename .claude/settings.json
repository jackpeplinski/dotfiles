{
  "cleanupPeriodDays": 60,
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "35000",
    "EDITOR": "nvim",
    "GIT_EDITOR": "nvim"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} /usr/bin/osascript -e 'display notification \"{}\" with title \"Claude\" sound name \"Sosumi\"'"
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": true,
  "model": "opus",
  "permissions": {
    "additionalDirectories": [
      "~/Downloads",
      "/tmp"
    ]
  }
}
