{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 60,
  "env": {
    "ANTHROPIC_BASE_URL": "https://proxy-shopify-ai.local.shop.dev/vendors/anthropic-claude-code",
    "ANTHROPIC_AUTH_TOKEN": "dummy_key",
    "CLAUDE_CODE_SKIP_AUTH_LOGIN": "true"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(/usr/bin/osascript:*)",
      "Bash(terminal-notifier:*)",
      "Bash(grep:*)",
      "Bash(mcp:*)",
      "Bash(pwd:*)",
      "Bash(preview-md:*)",
      "Bash(gh:issue list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr view:*)",
      "Bash(gh:label list:*)",
      "Bash(bin/rails test:*)",
      "Bash(yarn lint:*)",
      "Bash(yarn test:*)",
      "Bash(yarn eslint:*)",
      "Bash(pnpm run test:*)",
      "Bash(lsof -i:*)",
      "Bash(git reflog:*)"
    ],
    "additionalDirectories": [
      "~/Downloads",
      "/tmp"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude' -message '{{message}} -group 'claude-notifications' "
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": false,
  "autoUpdaterStatus": "enabled",
  "hasCompletedOnboarding": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754147115362
  }
}
